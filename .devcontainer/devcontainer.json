{
    "name": "VuePress Starter",
    "dockerFile": "Dockerfile",
    "appPort": 3000,
    "extensions": ["dbaeumer.vscode-eslint"],
    "settings": {
      "terminal.integrated.shell.linux": "/bin/bash"
    },
    "postCreateCommand": "yarn install && curl https://raw.githubusercontent.com/github/gitignore/master/Global/macOS.gitignore -o ~/.gitignore",
    // Comment out the next line to run as root instead. Linux users, update
    // Dockerfile with your user's UID/GID if not 1000.
    // "runArgs": ["-u", "node"]
  }